.row
  .col-xs-6
    h3 Yummly Recipes
    input(type='text', ng-model='yRecipe.name', placeholder='Search Yummly')
    button.btn.btn-primary(ng-click='addYum()') Add Recipe
    button.btn.btn-success(ng-click='toggleyRecipe()') Yummly
  .col-xs-6
    h3 My Recipes
    button.btn.btn-primary(ng-click='toggleRecipeForm()') Add Recipe
    button.btn.btn-success(ng-click='toggleRecipe()') Mine
br

.row
  form#recipeForm(role='form', novalidate, ng-show='hideRecipeForm', name='recipeForm')
    .col-xs-3
      .form-group
        input.form-control#date(ng-model='recipe.dateAdded', type='hidden', name='date', required)
      .form-group
        label(for='name') Name
        input.form-control#name(required, ng-model='recipe.name', type='text', name='name', placeholder='Mashed Potatoes')
      .form-group
        label(for='ingredients') Ingredients
        textarea.form-control#ingredients(required, ng-model='recipe.ingredients', type='text', name='ingredients', placeholder='milk, flour, eggs')
      .form-group
        label(for='directions') Directions
        textarea.form-control#directions(required, ng-model='recipe.directions', type='text', name='directions', placeholder='clean, cook, enjoy')
    br
    .col-xs-3
      .form-group
        label(for='photo') Picture
        input.form-control(required, ng-model='recipe.photo', type='text', name='photo', placeholder='http://examplepic.png')
      .form-group
        label(for='prepTime') Prep Time Required(minutes)
        input.form-control#prepTime(required, ng-model='recipe.prepTime', type='number', name='prepTime', placeholder='10')
      .form-group
        label(for='cookTime') Cook Time Required(minutes)
        input.form-control#cookTime(required, ng-model='recipe.cookTime', type='number', name='cookTime', placeholder='20')
    br
    .col-xs-3
      .form-group
        label(for='difficulty') Difficulty
        select.form-control#difficulty(required, ng-model='recipe.difficulty', type='dropdown', name='difficulty')
          option(ng-repeat='d in difficulties') {{d}}
      .form-group
        label(for='servings') Number of Servings
        input.form-control#servings(required, ng-model='recipe.numServings', type='number', name='servings', placeholder='2')
        button.btn.btn-success(type='submit', ng-show='recipeForm.$valid', ng-click='addRecipe()') Add!
.row
  .col-xs-12(ng-show='hideyRecipes')
    div#recipes(mk-recipe, ng-repeat='yRecipe in yRecipes', title='{{yRecipe.name}}')

.row
  .col-xs-12(ng-show='hideRecipes')
    #recipes(ng-repeat='r in recipes')
      h5: a(href='/#/recipe/{{r._id}}') {{r.name}}
      h6 {{r.dateAdded | date:'MMM dd, yyyy'}}
      img(ng-src='{{r.photo}}')


